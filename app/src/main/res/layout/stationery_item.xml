<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/icon_null" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/iv_img"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号:" />

            <TextView
                android:id="@+id/tv_ordernum"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="232535" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间:" />

            <TextView
                android:id="@+id/tv_ordertime"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2017.11.16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送地址:" />

            <TextView
                android:id="@+id/tv_orderaddress"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:text="北京市大屯路东金泉广场1单元2211" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_calltype"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系方式:" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_calltype"
                android:text="隔壁老王" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_name"
                android:text="18765432123" />
            <ImageView
                android:id="@+id/iv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:src="@mipmap/tel"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="送货时间:" />

            <TextView
                android:id="@+id/tv_sendtime"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2017.11.16" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/iv1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/ll_1"
        android:background="@color/gray_lighter"/>
    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv1"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/tv_accept_oreder"
            style="@style/tvStyle_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即接单"
            android:gravity="center"
            android:background="@mipmap/blue_bt"/>
        <TextView
            android:id="@+id/tv_cancel_order"
            style="@style/tvStyle_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="取消订单"
            android:background="@mipmap/blue_bt"/>
    </LinearLayout>
    <View
        android:id="@+id/iv2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/ll_2"
        android:background="@color/gray_trans"/>
</RelativeLayout>
