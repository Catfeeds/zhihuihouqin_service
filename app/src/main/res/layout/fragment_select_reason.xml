<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="#333"
            android:text="原因:"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/radioGroup_reason"
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="23dp">
                <RadioButton
                    android:id="@+id/radio_reason1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:button="@null"
                    android:background="@drawable/select_reason"/>
                <RadioButton
                    android:id="@+id/radio_reason2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="10dp"
                    android:button="@null"
                    android:background="@drawable/select_reason"/>
                <RadioButton
                    android:id="@+id/radio_reason3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="10dp"
                    android:button="@null"
                    android:background="@drawable/select_reason"/>
                <RadioButton
                    android:id="@+id/radio_reason4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="10dp"
                    android:button="@null"
                    android:background="@drawable/select_reason"/>
                <RadioButton
                    android:id="@+id/radio_reason5"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="10dp"
                    android:button="@null"
                    android:background="@drawable/select_reason"/>
            </RadioGroup>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="23dp">
                <TextView
                    android:id="@+id/tv_reason1"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textColor="#333"
                    android:text="原因1"/>
                <TextView
                    android:id="@+id/tv_reason2"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textColor="#333"
                    android:text="原因1"/>
                <TextView
                    android:id="@+id/tv_reason3"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textColor="#333"
                    android:text="原因1"/>
                <TextView
                    android:id="@+id/tv_reason4"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textColor="#333"
                    android:text="原因1"/>
                <TextView
                    android:id="@+id/tv_reason5"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp"
                    android:textColor="#333"
                    android:text="其他"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/otherReason_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="15dp"
            android:textColor="#333"
            android:text="其他原因:"/>
        <EditText
            android:id="@+id/otherReason_content"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:background="#f0f0f0"
            android:padding="10dp"
            android:gravity="top|left"
            android:textSize="15dp"
            android:textColor="#333"
            android:hint="请输入原因"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/selectReason_cancel"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:background="@drawable/solide_f30000_5"
                android:textColor="#fff"
                android:textSize="18sp"
                android:text="取消"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/selectReason_confirm"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:background="@drawable/solide_2ea7e0_5"
                android:textColor="#fff"
                android:textSize="18sp"
                android:text="确定"/>

        </LinearLayout>



    </LinearLayout>



</ScrollView>