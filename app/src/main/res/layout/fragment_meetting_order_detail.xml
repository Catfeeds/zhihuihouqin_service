            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tx3"
                style="@style/tvStyle_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址: " />

            <TextView
                android:id="@+id/tx_personaddress"
                style="@style/tvStyle_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
