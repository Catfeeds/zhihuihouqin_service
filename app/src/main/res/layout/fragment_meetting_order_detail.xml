            <TextView
                android:id="@+id/tx8"
                style="@style/tvStyle_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单编号: " />

            <TextView
                android:id="@+id/tx_ordernum"
                style="@style/tvStyle_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
