            <TextView
                android:id="@+id/tx19"
                style="@style/tvStyle_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人数: " />

            <TextView
                android:id="@+id/tx_meetPersonCount"
