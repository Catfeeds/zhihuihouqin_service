<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_img"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/icon_null" />

    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/iv_img"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单号:" />

            <TextView
                android:id="@+id/tv_ordernum"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="232535" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单时间:" />

            <TextView
                android:id="@+id/tv_ordertime"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2017.11.16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会议名称:" />

            <TextView
                android:id="@+id/tv_meettingType"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginLeft="10dp"
                android:text="爱党会议" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_calltype"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预约时间:" />

            <TextView
                android:id="@+id/tv_bookTime"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_calltype"
                android:text="2017-12-04  12:00-1:00" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_name"
                android:text="18765432123" />
            <ImageView
                android:id="@+id/iv_tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:src="@mipmap/tel"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="参会领导:" />

            <TextView
                android:id="@+id/tv_meetingPerson"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="各个人员" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会议类型:" />

            <TextView
                android:id="@+id/tv_meetingType"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="普通会议" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会场设备:" />

            <TextView
                android:id="@+id/tv_meetingEquipment"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="各个人员" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal">

            <TextView
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人数:" />

            <TextView
                android:id="@+id/tv_meeting_personCount"
                style="@style/tvStyle_blacklight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="22人" />
        </LinearLayout>

    </LinearLayout>
    <View
        android:id="@+id/iv1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/ll_1"
        android:background="@color/gray_lighter"/>
    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv1"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_alignParentRight="true">
        <TextView
            android:id="@+id/tv_accept_oreder"
            style="@style/tvStyle_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即接单"
            android:gravity="center"
            android:background="@mipmap/blue_bt"/>
        <TextView
            android:id="@+id/tv_cancel_order"
            style="@style/tvStyle_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="取消订单"
            android:background="@mipmap/blue_bt"/>
    </LinearLayout>
    <View
        android:id="@+id/iv2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/ll_2"
        android:background="@color/gray_trans"/>
</RelativeLayout>